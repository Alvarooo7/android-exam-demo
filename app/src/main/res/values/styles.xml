<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Primary">
        <item name="android:fontFamily">@font/averta_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/backgroundDefault</item>
    </style>

    <style name="Secondary">
        <item name="android:fontFamily">@font/averta_semibold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="Secondary.Dark">
        <item name="android:fontFamily">@font/averta_semibold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Secondary.Dark.Little">
        <item name="android:fontFamily">@font/averta_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>